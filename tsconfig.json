{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "src",
    "sourceMap": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest",
      "express"
    ]
  },
  "include": [
    "*.ts",
    "**/*.ts",
    "src/routes/*.ts",
    "src/routes/*.json"
  ],
  "exclude": [
    "./node_modules"
  ]
}